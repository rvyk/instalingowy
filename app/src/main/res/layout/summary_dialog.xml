<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/summaryDialog"
    android:orientation="vertical"
    android:paddingTop="16dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:tint="?attr/colorSecondary"
        android:layout_width="match_parent"
        android:src="@drawable/ic_baseline_celebration_24"
        android:layout_height="50dp"/>
    <com.google.android.material.textview.MaterialTextView
        style="@style/TextAppearance.Material3.HeadlineLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Podsumowanie sesji"
        android:gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="16dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/summaryUser"
        style="@style/TextAppearance.Material3.TitleLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="dla pawel3880"
        android:gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="16dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/summaryWorkDays"
        style="@style/TextAppearance.Material3.TitleMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Ilość dni pracy: 3"
        android:layout_marginBottom="16dp" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/summaryWords"
        style="@style/TextAppearance.Material3.TitleMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Wykonane słówka: 12/20"
        android:layout_marginBottom="16dp" />

</LinearLayout>
