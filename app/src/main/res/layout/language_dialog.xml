<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/language_dialog"
    android:orientation="vertical"
    android:paddingTop="16dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:tint="?attr/colorSecondary"
        android:layout_width="match_parent"
        android:src="@drawable/ic_baseline_language_24"
        android:layout_height="50dp"/>
    <com.google.android.material.textview.MaterialTextView
        style="@style/TextAppearance.Material3.HeadlineLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/settings_language"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <RadioGroup
        android:id="@+id/language_changer"
        android:checkedButton="@+id/system_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/system_language"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:paddingLeft="8dp"
            android:textSize="16sp"
            android:text="@string/settings_language_system"/>
        <RadioButton
            android:id="@+id/polish_language"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:paddingLeft="8dp"
            android:textSize="16sp"
            android:text="@string/settings_language_polish"/>
        <RadioButton
            android:id="@+id/english_language"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:paddingLeft="8dp"
            android:textSize="16sp"
            android:text="@string/settings_language_english"/>
        <RadioButton
            android:id="@+id/turkish_language"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:paddingLeft="8dp"
            android:textSize="16sp"
            android:text="@string/settings_language_turkish"/>
    </RadioGroup>

    <com.google.android.material.textview.MaterialTextView
        style="@style/TextAppearance.Material3.LabelMedium"
        android:layout_marginHorizontal="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_lang_help_us"
        android:textAlignment="center" />

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.Material3.Button.TonalButton"
        android:id="@+id/langDialCrowBut"
        app:icon="@drawable/ic_baseline_language_24"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_height="50dp"
        app:iconSize="20sp"
        android:layout_marginTop="15dp"
        android:text="@string/extra_info_crowdin"
        android:textSize="16sp" />

</LinearLayout>
